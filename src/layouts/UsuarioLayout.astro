---
import Layout from "./Layout.astro";
const { userSesion } = Astro.props;
import PerfilDef from "@/components/icons/PerfilDef.astro";
import BtnLogout from "@/components/usuario/BtnLogout";


---

<Layout title=`Hola ${userSesion?.nombre}`>
  {
    !userSesion ? (
      <div class="pt-20 min-h-dvh flex flex-col items-center text-center px-4">
        <img
          src="/sesion.svg"
          alt="Ilustración que representa una sesión no activa"
          class="w-40 h-40"
        />
        <p class="text-sm md:text-base text-gray-700">
          Parece que tu sesión ha expirado o no está activa.
        </p>
        <p class="text-sm md:text-base text-gray-700 mb-4">
          Por favor, vuelve a iniciarla
          para continuar.
        </p>
        <a href="/"  class="bg-gray-200 py-2 px-4 hover:bg-gray-300 rounded-lg text-white shadow-sm">Volver al inicio</a>
      </div>
    ) : (
      <section class="lg:grid lg:grid-cols-col-cust-5 mx-auto w-[90%] gap-2 min-h-dvh">
        <aside class="p-2 flex flex-col gap-2">
          <div class="flex flex-col items-center pt-14">
            {userSesion.picture ? (
              <img
                src={userSesion.picture}
                class="rounded-full"
                alt="User Profile Picture"
              />
            ) : (
              <PerfilDef />
            )}

            <span class="flex flex-col justify-center items-center">
              <p class="font-bold my-2">¡Hola!</p>
              <p class="text-sm font-semibold">{userSesion.nombre}</p>
              <p class="text-xs font-normal text-gray-500">
                ¿Que quieres hacer hoy?
              </p>
            </span>
          </div>
          <div class="text-[10px] leading-4 italic text-wrap bg-[#e0e0e0] p-2">
            <p>
              Aquí puedes ver la información de tu perfil y ver tu historial de
              compras, dejar tus dudas o consultas a treves del chat directo con
              el vendedor.
            </p>
          </div>
          <nav>
            <ul class="flex flex-col gap-2">
              <li>
                <a
                  href="/usuario/actualizar-datos"
                  class="duration-150 py-2 border hover:bg-blue-600 hover:text-white"
                >
                  Actuliazar datos
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    x-bind:width="size"
                    x-bind:height="size"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    x-bind:stroke-width="stroke"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    width="24"
                    class="size-6 pl-1"
                    height="24"
                    stroke-width="1.25"
                  >
                    <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                    <path d="M6 21v-2a4 4 0 0 1 4 -4h4" />
                    <path d="M15 19l2 2l4 -4" />
                  </svg>
                </a>
              </li>
              <li>
                <a
                  href="/usuario/compras"
                  class="duration-150 py-2 border hover:bg-blue-600 hover:text-white"
                >
                  Ver mis compras
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    x-bind:width="size"
                    x-bind:height="size"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    x-bind:stroke-width="stroke"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    width="24"
                    class="size-6 pl-1"
                    height="24"
                    stroke-width="1.25"
                  >
                    <path d="M12 3l8 4.5l0 9l-8 4.5l-8 -4.5l0 -9l8 -4.5" />
                    <path d="M12 12l8 -4.5" />
                    <path d="M12 12l0 9" />
                    <path d="M12 12l-8 -4.5" />
                    <path d="M16 5.25l-8 4.5" />
                  </svg>
                </a>
              </li>
              <li>
                <BtnLogout client:visible />
              </li>
            </ul>
          </nav>
        </aside>
        <article>
          <slot />
        </article>
      </section>
    )
  }
</Layout>

<style>
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
  }
  a:hover svg {
    stroke: white;
  }
  button:hover svg {
    stroke: white;
  }
</style>
