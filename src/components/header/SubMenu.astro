---
import ItemsSub from "./ItemsSub.astro";

const rutas = [
  {
    ruta1: {
      nombre: ["Sanitarios", "Griferias", "Espejos"],
      ruta: ["sanitarios", "griferias", "espejos"],
    },
    ruta2: {
      nombre: ["Lavaplatos", "Lavaderos"],
      ruta: ["lavaplatos", "lavaderos"],
    },
    ruta3: {
      nombre: ["Pinturas", "Pegantes", "Limpiadores"],
      ruta: ["pinturas", "pegantes", "limpiadores"],
    },
    ruta4: {
      nombre: ["Pisos ceramicos", "Paredes"],
      ruta: ["pisosceramicos", "paredes"],
    },
  },
];
---

<div>
  <ul class="flex items-center gap-1 md:gap-x-3">
    <li class="relative">
      <a
        href="/categoria/Baños"
        class="focus:ring-0 cursor-pointer focus:outline-none focus:ring-indigo-50 hover:text-gray-500 font-medium rounded-lg text-xs lg:text-sm px-3 py-2.5 text-center inline-flex items-center"
        type="button">
        Baños
        <svg
          class="w-2.5 h-2.5 ms-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 10 6">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 4 4 4-4"></path>
        </svg>
      </a>

      <!-- Dropdown menu -->
      <div
        id="drop-1"
        class="hidden absolute left-0 top-full bg-white divide-y divide-gray-100 rounded-lg shadow w-32 dark:bg-gray-700">
        {
          rutas.map((ruta) => (
            <ItemsSub nombre={ruta.ruta1.nombre} ruta={ruta.ruta1.ruta} />
          ))
        }
      </div>
    </li>
    <li class="relative">
      <a
        href="/categoria/Cocinas"
        class="focus:ring-0 focus:outline-none focus:ring-indigo-50 hover:text-gray-500 font-medium rounded-lg text-xs lg:text-sm px-3 py-2.5 text-center inline-flex items-center"
        type="button">
        Cocinas
        <svg
          class="w-2.5 h-2.5 ms-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 10 6">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 4 4 4-4"></path>
        </svg>
      </a>

      <!-- Dropdown menu -->
      <div
        id="drop-2"
        class="bg-white divide-y divide-gray-100 rounded-lg shadow w-32 dark:bg-gray-700 absolute z-10 hidden">
        {
          rutas.map((ruta) => (
            <ItemsSub nombre={ruta.ruta2.nombre} ruta={ruta.ruta2.ruta} />
          ))
        }
      </div>
    </li>
    <li class="relative">
      <a
        href="/categoria/Construccion-y-remodelacion"
        class="focus:ring-0 focus:outline-none focus:ring-indigo-50 font-medium hover:text-gray-500 rounded-lg text-xs lg:text-sm px-3 py-2.5 text-center inline-flex items-center"
        type="button">
        Construccion / remodelacion
        <svg
          class="w-2.5 h-2.5 ms-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 10 6">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 4 4 4-4"></path>
        </svg>
      </a>
      <!-- Dropdown menu -->
      <div
        id="drop-3"
        class="bg-white divide-y divide-gray-100 rounded-lg shadow w-56 right-0 dark:bg-gray-700 absolute z-10 hidden">
        {
          rutas.map((ruta) => (
            <ItemsSub nombre={ruta.ruta3.nombre} ruta={ruta.ruta3.ruta} />
          ))
        }
      </div>
    </li>
    <li class="relative">
      <a
        href="/categoria/Pisos-y-paredes"
        class="focus:ring-0 focus:outline-none focus:ring-indigo-50 hover:text-gray-500 font-medium rounded-lg text-xs lg:text-sm pl-3 pr-5 py-2.5 text-center inline-flex items-center"
        type="button">
        Pisos / paredes
        <svg
          class="w-2.5 h-2.5 ms-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 10 6">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 4 4 4-4"></path>
        </svg>
      </a>

      <!-- Dropdown menu -->
      <div
        id="drop-4"
        class="bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 absolute z-10 hidden">
        {
          rutas.map((ruta) => (
            <ItemsSub nombre={ruta.ruta4.nombre} ruta={ruta.ruta4.ruta} />
          ))
        }
      </div>
    </li>
    <li
      class="text-blue-600 font-bold hover:text-blue-400 duration-100 ease-in-out">
      <a href="/Ofertas" class="text-xs lg:text-sm">OFERTAS</a>
    </li>
  </ul>
</div>
<div>
  <a
    href="/Medios-de-pago"
    class="hover:text-gray-500 font-medium rounded-lg text-xs lg:text-sm pl-3 pr-5 py-2.5 text-center inline-flex items-center"
    >Medios de pago</a
  >
</div>

<style>
  li:hover > div {
    display: block;
  }

  div[id^="drop-"] {
    display: none;
  }

  div[id^="drop-"]:hover {
    display: block;
  }
</style>
