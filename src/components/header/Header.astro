---
import Sidebar from "./Sidebar.astro";
import CarShop from "../cards/CarShop.astro";
import SubMenu from "./SubMenu.astro";
import Compras from "../icons/Box.astro";
import Buscador from "./Buscador.astro";
import Login from "../Login.astro";
---

<header class="z-[1] fixed w-screen top-0 bg-white font-font-cust">
  <nav
    class="border-gray-200 dark:bg-gray-900 dark:border-gray-700 w-full md:px-3 lg:px-7">
    <div class="flex flex-wrap items-center justify-between mx-auto p-2 lg:p-4">
      <!-- button hidden -->
      <Sidebar />
      <!-- logo -->
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img
          src="../../../logo.webp"
          class="h-7 md:h-11"
          alt="Flowbite Logo"
          loading="lazy"
        />
      </a>
      <!-- seach -->
      <div class="hidden md:block w-1/3">
        <Buscador />
      </div>
      <!-- icons -->
      <div class="flex gap-2 md:gap-4">
        <Compras />
        <Login />
        <CarShop />
      </div>
    </div>
  </nav>
  <hr class="text-gray-500" />
  <div
    class="py-1 md:py-2 md:px-2 w-full shadow-md lg:px-20 justify-between hidden md:flex submenu-items">
    <SubMenu />
  </div>
</header>
