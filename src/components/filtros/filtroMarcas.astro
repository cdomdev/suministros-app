---
interface Props {
  marca: string | null;
}
const { marca } = Astro.props;
---

<ul>
  <li>
    <input
      class="m-2 rounded-[3px] text-xs md:text-sm w-3 h-3 focus:ring-2"
      type="checkbox"
      name="marca"
      value={marca}
      id={marca}
    />
    <label for={marca} class="text-xs md:text-sm uppercase">{marca}</label>
  </li>
</ul>
