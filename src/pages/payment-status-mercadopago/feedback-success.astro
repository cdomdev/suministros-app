---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Pago exitoso">
    <section
        class="flex items-center justify-center flex-col min-h-dvh bg-green-50">
        <div
            class="bg-white shadow-lg rounded-lg p-8 w-11/12 md:max-w-2xl text-center">
            <h1 class="text-xl md:text-2xl font-bold text-green-600 mb-4">
                ¡Pago exitoso!
            </h1>
            <p class="text-gray-700 mb-4 text-sm text-balance">
                Gracias por tu compra. Hemos recibido tu pago correctamente.
            </p>

            <button
                class="bg-blue-600 text-xs md:text-base text-white px-4 py-2 rounded hover:bg-blue-700">
                Hacer otra compra
            </button>
            <p class="text-xs md:text-sm text-gray-500 mt-4">
                ¿Tienes alguna duda? <a href="/" class="text-blue-500 underline"
                    >Contáctanos</a
                >
            </p>
        </div>
    </section>
</Layout>
